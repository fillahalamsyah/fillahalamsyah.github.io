---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props as Props;

const showFooter = title !== "404";
---

<!doctype html>
<html lang="en">
	<BaseHead title={title} description=''/>
	<body>
		<main>
			<slot />
		</main>
	</body>
	{showFooter && <Footer />}
</html>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>